<div class="navbar-nexaas">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-nexaas-brand" do %>
    <%= image_tag "logo-nexaas-azul.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-nexaas-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%= link_to "Tabelas", imports_path, class: "navbar-nexaas-item navbar-nexaas-link" %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-nexaas-item">
        <div class="dropdown">
          <% avatar_url = current_user.facebook_picture_url || "http://placehold.it/30x30" %>
          <%= image_tag avatar_url, class: "avatar dropdown-toggle", id: "navbar-nexaas-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-nexaas-dropdown-menu">
            <li>
              <%= link_to root_path do %>
                <i class="fa fa-home"></i>  <%= t(".profile", default: "Home") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-nexaas-item navbar-nexaas-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-nexaas-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-nexaas-dropdown-menu">
        <li><a href="#">Tabela</a></li>
        <li><a href="#">Home</a></li>
        <li><%= link_to "Log out",destroy_user_session_path, method: :delete %></li>
      </ul>
    </div>
  </div>
</div>

