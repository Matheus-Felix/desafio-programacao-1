<div class="container">

  <h1>Selecione a tabela a ser importada</h1>

  <%= form_tag({action: :upload}, multipart: true) do %>
    <%= file_field_tag :file, :required => true %>
    <%= submit_tag "Importar" %>
  <% end %>
  <br>
  <p>Receita total: <%= @sum_total %></p>
  <br>

  <table class="table">
    <tr>
      <th>Comprador</th>
      <th>Descrição</th>
      <th>Preço</th>
      <th>Quantidade</th>
      <th>Endereço do Vendedor/Estabelecimento</th>
      <th>Nome do Vendedor/Estabelecimento</th>
    </tr>
  <% @purchases.each do |p| %>
    <tr>
      <td><%= p.purchaser_name %></td>
      <td><%= p.item_description %></td>
      <td><%= p.item_price %></td>
      <td><%= p.purchase_count %></td>
      <td><%= p.merchant_address %></td>
      <td><%= p.merchant_name %></td>
      <td><%= p.total %></td>
    </tr>
  <% end %>
</div>
